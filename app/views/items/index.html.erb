<h1>Items</h1>

<h3><%= link_to "new item", "javascript:void();", class: 'new-item-link' %></h3>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newitemmodal">
  new item modal
</button>

<!-- Modal -->
<div class="modal fade" id="newitemmodal" tabindex="-1" role="dialog" aria-labelledby="newItemModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newItemModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
     <div class="modal-body">
        
          </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


<div id="new-form"></div>
<div id="edit-form"></div>
<div>
  <button data-category="Electronics" class="filter-btn">Electronics</button>
  <button data-category="Furniture" class="filter-btn">Furniture</button>
  <button data-category="Education" class="filter-btn">Education</button>
  <button data-category="" class="filter-btn">All</button>
</div>


<div id="items-container">
  <%= render partial: 'items', locals: { items: @items } %>
</div>

<div id="new-item-data"></div>

